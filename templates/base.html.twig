<!DOCTYPE html>
<html>

<head>
  <meta charset="UTF-8" />
  <title>{% block title %}Welcome!{% endblock %}</title>
  <link rel="icon" href="{{ asset('img/icons/logo.png') }}" />
  {% block stylesheets %}
  <link rel="stylesheet" href="{{ asset('build/style.css') }}" />
  <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBwRdXofYPItKiTcLb5T2j7ABGrRnbhhyc&callback=initMap"></script>
    <script>
        function initMap() {
            // Coordonnées du centre de la carte
            var center = {lat: 48.8588443, lng: 2.2943506};

            // Options de la carte
            var mapOptions = {
                center: center,
                zoom: 14 // Niveau de zoom
            };

            // Créez une nouvelle carte Google Maps
            var map = new google.maps.Map(document.getElementById('map'), mapOptions);
        }
    </script>
  {% endblock %}
</head>

<body>
  {% block header %}
  <header>
    <div class="logo">
      <a href="{{ path('app_home') }}">
        <h1 class="title">Stellar</h1>
      </a>
    </div>
    {% if app.user %}
    <div class="log">
      <img id="profil-picture" src="{{ asset('img/unnamed.jpg') }}" alt="" />
      <div id="profil-menu" class="active">
        <ul>
          <h4>Hi, {{ app.user.username }}</h4>
          <li><a href="">Mon profil</a></li>
          {#
          {{
          path("app_profil")
          }}
          #}
          <li><a href="">Modifier mon profil</a></li>
          {#
          {{
          path("app_profil_edit")
          }}
          #}
          <li><a href="{{ path('new_advert') }}">Créer mon annonce</a></li>
          {% if app.user.adverts is not empty %} {# si mon user a des annonces
          #}
          <li><a href="{{ path('user_adverts') }}">Mes annonces</a></li>
          {% endif %}
          <hr />
          <li>
            <b><a href="{{ path('app_logout') }}">Se déconnecter</a></b>
          </li>
        </ul>
      </div>
    </div>
    {% else %}
    <div class="log">
      <a href="{{ path('app_register') }}" class="signup">Sign Up</a>
      <a href="{{ path('app_login') }}" class="login">Log In</a>
    </div>
    {% endif %}
  </header>
  {% endblock header %}
  <main>
    {% block body %}
    {% endblock %}
  </main>
  <footer>

  </footer>
</body>
{% block javascripts %}
<script src="{{ asset('js/app.js') }}"></script>
<script src="{{ asset('js/map.js') }}"></script>
<script src="{{ asset('js/upload.js') }}"></script>
<script src="{{ asset('js/animations.js') }}"></script>
{% endblock %}

</html>