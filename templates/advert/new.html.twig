{% extends 'base.html.twig' %} 
{% block title %}Ajouter une annonce{% endblock %} 
{% block body %}
<div class="wrapper">
  <a href="{{ path("app_home") }}" class="return-home">
    <img src="{{ asset('img/icons/Left Arrow.svg') }}" alt="Icon return home">
  </a>
  <div class="wrapper-detail">
    {{ form_start(formAddAdvert) }}
    <div class="wrapper-detail-title">
      <div class="detail-title-left">
        <div class="advert-title">{{ form_row(formAddAdvert.title) }}</div>
        <div class="address-wrap">
          <svg width="18" height="24" viewBox="0 0 18 24" fill="none" xmlns="http://www.w3.org/2000/svg"
            xmlns:xlink="http://www.w3.org/1999/xlink">
            <rect width="18" height="24" fill="url(#pattern0)" />
            <defs>
              <pattern id="pattern0" patternContentUnits="objectBoundingBox" width="1" height="1">
                <use xlink:href="#image0_57_25" transform="matrix(0.01 0 0 0.0075 0 0.125)" />
              </pattern>
              <image id="image0_57_25" width="100" height="100"
                xlink:href="data:image/png;base64," />
            </defs>
          </svg>
          <div class="location">
            {{ form_row(formAddAdvert.address) }}
            {{ form_row(formAddAdvert.city) }}
            {{ form_row(formAddAdvert.cp) }}
            {{ form_row(formAddAdvert.country) }}
          </div>
        </div>
      </div>
      <div class="detail-title-right shadow-emp">
      </div>
    </div>
    <div class="image-upload-wrapper" draggable="true">
      <div class="image-upload-card" id="drop-area">
        <label for="advert_images" class="custom-file-upload">
          Drag & Drop here<br />
          or<br />
          <span class="image-input-label-span">Click on the card</span>
        </label>
        <img src="{{ asset('img/imageupload.svg') }}" alt="animation upload" />
        {{ form_row(formAddAdvert.images) }}
      </div>
      <div class="scroll-files">
        <div class="file-list">
        </div>
      </div>
    </div>
    <div class="wrapper-detail-main">
      <div class="wrapper-detail-left">
        <div class="wrapper-detail-left-category">
          <h2>Type</h2>
          <div class="checkbox-wrapper-16">
            {% for lodge in lodges %}
            <label class="checkbox-wrapper">
              {{
              form_widget(formAddAdvert.lodge[lodge.id], {
              attr: { class: "checkbox-input" }
              })
              }}
              <span class="checkbox-tile">
                <span class="checkbox-icon">
                  <img src="{{ asset('img/icons/types/' ~ lodge.icon) }}" alt="{{ lodge.type }}" />
                </span>
                <span class="checkbox-label">{{ lodge.type }}</span>
              </span>
            </label>
            {% endfor %}
          </div>

          <h2>Catégories</h2>

          <div class="checkbox-wrapper-16">
            {% for category in categories %}
            <label class="checkbox-wrapper">
              {{
              form_widget(formAddAdvert.categories[category.id], {
              attr: { class: "checkbox-input" }
              })
              }}
              <span class="checkbox-tile">
                <span class="checkbox-icon">
                  <img src="{{ asset('img/icons/categories/' ~ category.icon) }}" 
                  alt="{{ category.name }}" />
                </span>
                <span class="checkbox-label">{{ category.name }}</span>
              </span>
            </label>
            {% endfor %}
          </div>

        </div>
        <div class="wrapper-detail-left-owner">
          <div class="wrapper-detail-left-owner-info">
            <p class="shadow-emp"></p><span class="shadow-emp"></span>
          </div>
          <div class="shadow-emp">
          </div>
        </div>
        <div class="wrapper-detail-left-description">
          {{ form_row(formAddAdvert.description) }}
        </div>
        <div class="wrapper-detail-left-commodite">
          <h2>Commodités</h2>
          <div class="checkbox-wrapper-17">
            {% for accessory in accessories %}
            <label class="checkbox-wrapper">
              {{
              form_widget(formAddAdvert.accessories[accessory.id], {
              attr: { class: "checkbox-input" }
              })
              }}
              <span class="checkbox-tile-fit">
                <span class="checkbox-icon">
                  <img src="{{ asset('img/icons/accessories/' ~ accessory.icon) }}" alt="{{ accessory.name }}" />
                </span>
                <span class="checkbox-label">{{ accessory.name }}</span>
              </span>
            </label>
            {% endfor %}
          </div>
        </div>
      </div>
      <div class="wrapper-detail-right">
        <div class="night-price">
          {{ form_widget(formAddAdvert.price) }}<span class="span"><span>€</span>/nuits</span>
        </div>

        <div class="dates">
          <div class="shadow-emp">
          </div>
          <div class="shadow-emp">
          </div>
        </div>

        <div class="shadow-emp-cal"></div>

        <div class="price-details">
          <div class="price">
            <p class="shadow-emp-p"></p><span class="shadow-emp"></span>
          </div>
          <div class="price">
            <p class="shadow-emp-p"></p><span class="shadow-emp"></span>
          </div>
          <div class="price">
            <p class="shadow-emp-p"></p><span class="shadow-emp"></span>
          </div>
        </div>
        <div class="log">
          <div class="shadow-emp"></div>
        </div>
      </div>
    </div>

    {{ form_row(formAddAdvert.other) }}
    {{ form_end(formAddAdvert) }}
  </div>
</div>
{% endblock %}

