{% extends 'base.html.twig' %}

{% block title %}Administration{% endblock %}

{% block body %}
<div class="wrapper">
  <div class="wrapper-detail">
    <nav class="breadcrumb-nav">
      <ul class="breadcrumb">
        <li class="breadcrumb-item">
          <a href="{{ path('app_home') }}">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
              class="bi bi-house-door-fill" viewBox="0 0 16 16">
              <path
                d="M6.5 14.5v-3.505c0-.245.25-.495.5-.495h2c.25 0 .5.25.5.5v3.5a.5.5 0 0 0 .5.5h4a.5.5 0 0 0 .5-.5v-7a.5.5 0 0 0-.146-.354L13 5.793V2.5a.5.5 0 0 0-.5-.5h-1a.5.5 0 0 0-.5.5v1.293L8.354 1.146a.5.5 0 0 0-.708 0l-6 6A.5.5 0 0 0 1.5 7.5v7a.5.5 0 0 0 .5.5h4a.5.5 0 0 0 .5-.5Z" />
            </svg>
          </a>
        </li>
        <span>
          <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
            class="bi bi-caret-right-fill" viewBox="0 0 16 16">
            <path
              d="m12.14 8.753-5.482 4.796c-.646.566-1.658.106-1.658-.753V3.204a1 1 0 0 1 1.659-.753l5.48 4.796a1 1 0 0 1 0 1.506z" />
          </svg>
        </span>
        <li class="breadcrumb-item active" aria-current="page">Admin</li>
      </ul>
    </nav>
    <div class="admin-page">
      <h1>Page d'administration</h1>
      <div class="admin-content">
        <div class="add-content">
          <h2>Ajouter une Catégorie de logement</h2>
          {{ form_start(categoryForm) }}
          <div class="admin-content-form">
            {{ form_widget(categoryForm) }}
          </div>
          {{ form_end(categoryForm) }}
        </div>

        <div class="add-content">
          <h2>Ajouter un Type de logement</h2>
          {{ form_start(lodgeForm) }}
          <div class="admin-content-form">
            {{ form_widget(lodgeForm) }}
          </div>
          {{ form_end(lodgeForm) }}
        </div>

        <div class="add-content">
          <h2>Ajouter une Commodité</h2>
          {{ form_start(accessoryForm) }}
          <div class="admin-content-form">
            {{ form_widget(accessoryForm) }}
          </div>
          {{ form_end(accessoryForm) }}
        </div>
      </div>
      {% if reportedAdverts < 1 %} <h2>Annonces Signalées</h2>
        {% else %}
        <h2>Annonce Signalée</h2>
        {% endif %}
        {% for flash_error in app.flashes('success_supp_advert') %}
        <div class="success-alert" role="alert">
          {{ flash_error }}
        </div>
        {% endfor %}
        <div id="advertsSection" class="fade">
          <div class="adverts-container">
            <div class="advert-card-list">
              {% for advert in reportedAdverts %}
              <div class="reported-adverts">
                <div class="advert-card slide-in">
                  <a class="clickable-card" href="{{ path('detail_advert', {'slug': advert.slug, 'id': advert.id}) }}">
                    <figure>
                      {% if advert.images is not empty %}
                      <img src="{{ asset('uploads/adverts/' ~ advert.images[0].url) }}" alt="{{ advert.title }} image">
                      {% endif %}
                    </figure>
                    <div class="card-content">
                      <h3 class="card-title">{{ advert.title}}</h3>
                      <p class="card-text">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                          class="bi bi-geo-alt-fill" viewBox="0 0 16 16">
                          <path
                            d="M8 16s6-5.686 6-10A6 6 0 0 0 2 6c0 4.314 6 10 6 10zm0-7a3 3 0 1 1 0-6 3 3 0 0 1 0 6z" />
                        </svg>
                        {{ advert.city }},
                        {{ advert.country }}
                      </p>
                      <p class="card-text">
                        <span class="price-card">{{ advert.price }}€</span>/nuit
                      </p>
                    </div>
                  </a>
                </div>
                <div class="user-reporter">
                  <p>Signalé par : {{ advert.reportedBy }}</p>
                </div>
                <div class="admin-response">
                  <h3>Décision de l'administrateur</h3>
                  <form action="{{ path('admin_approve_report', {'id': advert.id}) }}" method="post">
                    <button type="submit" class="confirmation-btn">Approuver et
                      Supprimer</button>
                  </form>
                  <form action="{{ path('admin_reject_report', {'id': advert.id}) }}" method="post">
                    <button type="submit" class="reject-btn">Rejeter le Signalement</button>
                  </form>
                </div>
              </div>
              {% endfor %}
            </div>
          </div>
        </div>
    </div>
  </div>
</div>



{% endblock %}