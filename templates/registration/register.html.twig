{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
{% block header %} {% endblock header %}

<div class="wrapper-form" style="padding: 5% 8%;">
    <div class="background">
            <img class="background-under" src="{{ asset('img/illustrations/signupbackground.png')}}" alt="background-img">
            <img class="background-upper" src="{{ asset('img/illustrations/loginpage.png')}}" alt="background-login">
    </div>
    <div class="log-content">
        <div class="log-content-title">
            <h2>Bienvenue sur</h2>
            <h1><a href="{{ path('app_home')}}">Stellar</a></h1>
            <q>Inscrivez vous pour une aventure complète !</q>
        </div>
        {% for flash_error in app.flashes('verify_email_error') %}
            <div class="" role="alert">{{ flash_error }}</div>
        {% endfor %}


        {{ form_errors(registrationForm) }}
        <div class="log-content-form">
            {{ form_start(registrationForm) }}
                {{ form_row(registrationForm.email) }}
                {{ form_row(registrationForm.username) }}
                {{ form_row(registrationForm.plainPassword, {
                    label: 'Password'
                }) }}
                <div class="agree-terms">
                    <label for="agreeTerms">Accepter les <a href="#">conditions générales d’utilisation</a></label>
                    {{ form_widget(registrationForm.agreeTerms) }}
                </div>
                <button type="submit" class="sub-btn">Register</button>
            {{ form_end(registrationForm) }}
        </div>
    </div>
</div>
{% endblock %}
